{
    "name": "dependinator",
    "displayName": "Dependinator",
    "description": "Dependinator UI hosted in a VS Code webview.",
    "version": "0.5.0",
    "publisher": "michaelreichenauer",
    "license": "MIT",
    "repository": "https://github.com/michael-reichenauer/Dependinator",
    "icon": "media/icon-192.png",
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Visualization"
    ],
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "activationEvents": [],
    "main": "./dist/node/extension.js",
    "browser": "./dist/web/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "dependinator.open",
                "title": "Dependinator: Open"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p tsconfig.node.json && tsc -p tsconfig.web.json",
        "watch": "tsc -w -p tsconfig.node.json",
        "watch:web": "tsc -w -p tsconfig.web.json",
        "prepare:wasm": "bash scripts/prepare-wasm.sh",
        "prepare:server": "bash scripts/prepare-server.sh",
        "build:extension": "npm run prepare:wasm && npm run prepare:server && npm run compile",
        "package": "vsce package",
        "vscode:prepublish": "npm run build:extension"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.14.10",
        "@types/vscode": "^1.84.0",
        "@vscode/vsce": "^3.2.0",
        "typescript": "^5.4.5"
    }
}