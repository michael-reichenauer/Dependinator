{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web Dependinator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/DependinatorWeb/bin/Debug/net10.0/DependinatorWeb.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DependinatorWeb",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/DependinatorWeb/Views"
            },
            "dotnetRunMessages": true,
            "console": "internalConsole"
        },
        {
            "name": "VSCodeExt Dependinator",
            "type": "extensionHost",
            "request": "launch",
            "preLaunchTask": "Dependinator: Prepare and Compile Extension",
            "args": [
                "--disable-extension",
                "github.copilot-chat",
                "--disable-extension",
                "openai.chatgpt",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Wasm/Server",
            "configurations": [
                "Attach to .NET Functions",
                "Launch and Debug Standalone Blazor WebAssembly App"
            ]
        }
    ]
}