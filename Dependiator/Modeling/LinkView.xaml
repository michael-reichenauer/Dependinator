<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Dependiator.Modeling">

	<DataTemplate x:Key="LinkViewTemplate">

		<Border BorderBrush="Transparent" BorderThickness="0">
			<Grid>

				<Line
					X1="{Binding X1}"
					Y1="{Binding Y1}"
					X2="{Binding X2}"
					Y2="{Binding Y2}"
					Stroke="Transparent"
					StrokeThickness="8"
					StrokeDashArray="{Binding StrokeDash}">

					<Line.ToolTip>
						<ToolTip
							Content="{Binding ToolTip}"
							Placement="Mouse"
							BorderBrush="{Binding LineBrush}"
							BorderThickness="1" />
					</Line.ToolTip>
				</Line>

				<Line
					X1="{Binding X1}"
					Y1="{Binding Y1}"
					X2="{Binding X2}"
					Y2="{Binding Y2}"
					Stroke="{Binding LineBrush}"
					StrokeThickness="3"
					StrokeDashArray="{Binding StrokeDash}"
					IsHitTestVisible="False">
				</Line>
				
			</Grid>
			
		</Border>

	</DataTemplate>
</ResourceDictionary>