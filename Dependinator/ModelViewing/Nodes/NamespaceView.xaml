<UserControl
	x:Class="Dependinator.ModelViewing.Nodes.NamespaceView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:items="clr-namespace:Dependinator.ModelViewing.Private.Items"
	xmlns:nodes="clr-namespace:Dependinator.ModelViewing.Nodes"
	mc:Ignorable="d"
	d:DesignHeight="300" d:DesignWidth="300">


	<Grid Background="Transparent">

		<!-- Node border -->
		<Rectangle Visibility="{Binding IsShowNode, Converter={StaticResource VC}}"
			Margin="0"
			Stroke="{Binding RectangleBrush}"
			StrokeThickness="{Binding RectangleLineWidth}"
			StrokeDashArray="4,4"
			Fill="{Binding BackgroundBrush}"
			Stretch="Fill"
			UseLayoutRounding="True" />


		<!-- Inner model -->
		<items:ItemsView x:Name="ItemsView" DataContext="{Binding ItemsViewModel}" />

		<nodes:TitleView Visibility="{Binding IsShowNode, Converter={StaticResource VC}}"/>

		<!-- Rectangle points -->
		<nodes:NodePointsView Visibility="{Binding IsShowNode, Converter={StaticResource VC}}"/>

	</Grid>


</UserControl>