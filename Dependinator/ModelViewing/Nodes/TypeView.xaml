<UserControl
	x:Class="Dependinator.ModelViewing.Nodes.TypeView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:nodes="clr-namespace:Dependinator.ModelViewing.Nodes"
	xmlns:items1="clr-namespace:Dependinator.ModelViewing.Items"
	mc:Ignorable="d"
	d:DesignHeight="300" d:DesignWidth="300">


	<Grid Background="Transparent">

		<!-- Node border -->
		<Rectangle Visibility="{Binding IsShowNode, Converter={StaticResource VC}}"
			Margin="0"
			Stroke="{Binding RectangleBrush}"
			StrokeThickness="{Binding RectangleLineWidth}"
			Fill="{Binding BackgroundBrush}"
			Stretch="Fill" 
			RadiusX="3"
			RadiusY="3"/>


		<nodes:DescriptionView Visibility="{Binding IsShowDescription, Converter={StaticResource VC}}"/>

		<Grid Visibility="{Binding IsShowItems, Converter={StaticResource VC}}">
			<items1:ItemsView x:Name="ItemsView" DataContext="{Binding ItemsViewModel}" />
		</Grid>

		<nodes:TitleView Visibility="{Binding IsShowNode, Converter={StaticResource VC}}"/>

		<!-- Rectangle points -->
		<nodes:NodePointsView Visibility="{Binding IsShowNode, Converter={StaticResource VC}}"/>

	</Grid>

</UserControl>