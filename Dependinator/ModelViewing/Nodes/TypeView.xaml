<UserControl
	x:Class="Dependinator.ModelViewing.Nodes.TypeView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:modelViewing="clr-namespace:Dependinator.ModelViewing"
	xmlns:items="clr-namespace:Dependinator.ModelViewing.Private.Items"
	xmlns:nodes="clr-namespace:Dependinator.ModelViewing.Nodes"
	mc:Ignorable="d"
	d:DesignHeight="300" d:DesignWidth="300">


	<Grid Background="Transparent">

		<!-- Node border -->
		<Rectangle
			Margin="0"
			Stroke="{Binding RectangleBrush}"
			StrokeThickness="{Binding RectangleLineWidth}"
			Fill="{Binding BackgroundBrush}"
			Stretch="Fill" 
			RadiusX="3"
			RadiusY="3"
			UseLayoutRounding="True"/>

		
		<!-- Inner model -->
		<items:ItemsView x:Name="ItemsView" DataContext="{Binding ItemsViewModel}" />

		<nodes:TitleView/>

		<!-- Rectangle points -->
		<nodes:NodePointsView/>

	</Grid>



</UserControl>