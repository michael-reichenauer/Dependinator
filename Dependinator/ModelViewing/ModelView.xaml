<UserControl
	x:Class="Dependinator.ModelViewing.ModelView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:items="clr-namespace:Dependinator.ModelViewing.ModelHandling.Private.Items"
	mc:Ignorable="d"
	d:DesignHeight="300" d:DesignWidth="300" Loaded="MainView_OnLoaded">

	<!-- Model -->
	<Border
		BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
		AllowDrop="true"
		Drop="Dropped_Files">
		<items:ItemsView x:Name="ItemsView" DataContext="{Binding ItemsViewModel}" />
	</Border>

</UserControl>