@namespace DependinatorLib.Areas.Canvas

@inject DependinatorLib.Areas.Canvas.ICanvasService srv

<div>
    <svg id="canvasid" xmlns="http://www.w3.org/2000/svg" width="400" height="400" viewBox="@srv.ViewBox"
        @onwheel="@srv.OnMouseWheel" @onmousemove="@srv.OnMouse" @onmouseup="@srv.OnMouse" @onmousedown="@srv.OnMouse">
        @((MarkupString)srv.GetContent())
    </svg>
</div>

@code {
    public void TriggerStateHasChanged()
    {
        InvokeAsync(() => StateHasChanged());
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await srv.InitJsAsync(this);
            StateHasChanged();
        }
    }
}
